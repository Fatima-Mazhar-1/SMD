            <EditText
                android:id="@+id/cityinput"
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:layout_marginTop="648dp"
                android:background="@drawable/whiteroundsquare"
                android:gravity="left|center_vertical"
                android:hint="Enter your city"
                android:paddingStart="25dp"
                android:textColor="#757272"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.747"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/passwordinput"
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:layout_marginTop="736dp"
                android:background="@drawable/whiteroundsquare"
                android:gravity="left|center_vertical"
                android:hint="Enter your password"
                android:paddingStart="25dp"
                android:textColor="#757272"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.747"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/passrest"
                android:layout_width="315dp"
                android:layout_height="68dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Password must be at least 8 characters long"
                android:textColor="#FDFFFFFF"
                android:textSize="7sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passwordinput"
                app:layout_constraintVertical_bias="0.055" />

            <Button
                android:id="@+id/login"
                android:layout_width="160dp"
                android:layout_height="56dp"
                android:layout_marginTop="800dp"
                android:gravity="center"
                android:src="@drawable/whiteroundsquare"
                android:text="SignUp"
                android:onClick="signup"
                android:textColor="#757272"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
